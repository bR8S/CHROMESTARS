<div class="padding">
    <div class="races-header">
        <h1>HISTORY</h1>
    </div>

    <div class="races">
    <% race.forEach(race => { %>
        <div class="race">
            <div class="race-top">
                <div class="race-title">
                    <img class="race-img" src="/chromestars-star.png">
                    <% if (race.event) { %><%= race.event.name %> | <% } %><%= race.name %> | <%= race.time %>
                </div>
                <div class="accordion-arrow">
                    <div class="accordion-arrow-left"></div>
                    <div class="accordion-arrow-right"></div>
                </div>
            </div>
            <div class="race-bottom">
                <ol class="race-participants">
                    <% race.participants.forEach(participant => { %>
                        <li class="race-participant" data-id="<%= participant._id %>"><%= participant.username %></li>
                    <% }) %>
                </ol>
            </div>
        </div>
    <% }) %>
    </div>
</div>

<script>
    function handleRaceToggle(race) {
        race.addEventListener('click', event => {
            race.querySelector('.race-bottom').classList.toggle('show')
            race.querySelector('.accordion-arrow').classList.toggle('show')
        })
    }

    const raceElem = document.querySelectorAll('.race')
    raceElem.forEach((race) => handleRaceToggle(race))
</script>

<style>
    .races-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .races {
        display: flex;
        flex-direction: column;
        gap: 24px;
        margin-top: 20px;
    }
    .race {
        position: relative;
        display: flex;
        flex-direction: column;
        padding: 16px;
        gap: 8px;
        border: 1px solid #FFFFFF24;
        background: #ffffff0d;
        transition: all 0.15s ease-in-out;
        cursor: pointer;
    }
    .race:hover {
        border: 1px solid #FFFFFF79;
        border-radius: 0;
        outline: none;
        background: #FFFFFF24;
    }
    .race-top, .race-bottom {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
    .race-top {
        justify-content: space-between;
    }
    .race-bottom {
        display: none;
    }
    .race-bottom.show {
        display: flex;
    }
    .race-delete {
        fill:#FFF;
        height: 16px;
        border: 1px solid #FFFFFF24;
        padding: 6px;
        cursor: pointer;
        top: 16px;
        right: 16px;
    }
    .race-delete:hover {
        border: 1px solid #FFFFFF79;
        background: #FFFFFF24;
    }
    .race-delete svg {
        height: 100%;
        width: 100%;
    }
    ol {
        margin: 0;
    }
    li {
        padding: 4px;
    }
    .race-participants {
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
        max-height: 150px;
        padding-inline-start: 40px;
        gap: 0 50px;
    }
    .race-participant {
        width: 120px;
    }
    .race-title .race-img {
        height: 14px;
    }
    .race-title {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 14px;
    }
    .accordion-arrow {
        position: relative;
        left: -10px;
    }
    .accordion-arrow.show {
        transform: rotate(180deg);
    }
    .accordion-arrow-left {
        position: absolute;
        height: 1px;
        width: 12px;
        left: -4.5px;
        transform: translate(-50%, -50%) rotate(42deg);
        background-color: #ffffff;
    }
    .accordion-arrow-right {
        position: absolute;
        height: 1px;
        width: 12px;
        left: 4.5px;
        transform: translate(-50%, -50%) rotate(-42deg);
        background-color: #ffffff;
    }
</style>